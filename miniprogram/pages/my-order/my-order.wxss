page {
  background: #f7f7f7;
}

.container {
  padding-bottom: env(safe-area-inset-bottom);
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -1rpx 5rpx rgba(0,0,0,0.1);
}

.filter-button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 10rpx 30rpx;
  gap: 8rpx;
}

.filter-button text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1;
}
