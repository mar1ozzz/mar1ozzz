map{
  width: 100%;
  height: 750px;
}
.add_icon{
  position: fixed;
  width:42px;
  height:42px;
bottom: 30px;
right: 20px;
}
.map-legend {
  position: absolute;
  left: 10px; /*左侧预留*/
  bottom: 10px; /*底部预留*/
  display: flex;
  flex-direction: column; /* 按列排列 */
  background-color: rgba(80, 80, 80, 0.3); /* 白色背景*/
  padding: 10px;
  border-radius: 5px;
  box-shadow: 0 4px 8px rgba(12, 0, 0, 0.1);
  max-width: 300px; /* 根据实际需要调整最大宽度 */
}
.legend-item {
  display: flex;
  align-items: center;
  margin-bottom: 2px; /* 根据需要调整底部外边距，为下一个图例项留出空间 */
}
.legend-icon {
  width: 15px; /* 或根据您的图标实际大小调整 */
  height: 15px; /* 或根据您的图标实际大小调整 */
  margin-right: 8px; /* 图标和文本之间的间距 */
}
.legend-item text {
  font-size: 11px; /* 根据您的需求调整大小 */
  color: rgb(236, 233, 233); /* 可选，设置文字颜色 */
}