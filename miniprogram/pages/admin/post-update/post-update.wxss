.location-view {
  display: flex;
  flex-direction: row; /* 横向排列 */
  justify-content: flex-start; /* 使子元素从左端开始排列 */
  max-width: 100%; /* 最大宽度，根据需要调整，使用rpx */
  margin-top: 0px;
  margin-bottom: -9px
}

.location-text:first-child {
  flex-grow: 1; /* 防止元素伸展，保持内容宽度 */
  margin-left: 16px; /* 在元素左侧增加20rpx空白 */
  font-size: 12px; /* 字体大小 */
  color: #333; /* 字体颜色 */
  margin-bottom: 0px; /* 既然是横向排列，就移除底部间距 */
  line-height: 2; /* 行高设置 */
  color: #a39f9f; /* 设置字体颜色为灰色 */
  background-color: #ffffff;
}

.location-text:last-child {
  flex-grow: 1; /* 让第二个元素占用所有剩余空间 */
  text-align: left; /* 将内容居中在左 */
  font-size: 12px; /* 字体大小 */
  color: #333; /* 字体颜色 */
  margin-bottom: 0; /* 移除底部间距，同上 */
  line-height: 2; /* 行高 */
  color: #a39f9f; /* 设置字体颜色为灰色 */
  background-color: #ffffff;
}

.my-custom-button {
