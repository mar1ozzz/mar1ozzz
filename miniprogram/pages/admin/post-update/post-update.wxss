.location-view {
  display: flex;
  flex-direction: row; /* 横向排列 */
  justify-content: flex-start; /* 使子元素从左端开始排列 */
  max-width: 100%; /* 最大宽度，根据需要调整，使用rpx */
  margin-top: 0px;
  margin-bottom: -9px
}

.location-text:first-child {
  flex-grow: 1; /* 防止元素伸展，保持内容宽度 */
  margin-left: 33rpx; /* 在元素左侧增加20rpx空白 */
  font-size: 22rpx; /* 字体大小 */
  color: #333; /* 字体颜色 */
  margin-bottom: 0; /* 既然是横向排列，就移除底部间距 */
  line-height: 1.5; /* 行高设置 */
  color: #a39f9f; /* 设置字体颜色为灰色 */
  background-color: #ffffff;
}

.location-text:last-child {
  flex-grow: 1; /* 让第二个元素占用所有剩余空间 */
  text-align: left; /* 将内容居中显示 */
  font-size: 22rpx; /* 字体大小同第一个元素保持一致 */
  color: #333; /* 字体颜色 */
  margin-bottom: 0; /* 移除底部间距，同上 */
  line-height: 1.5; /* 行高 */
  color: #a39f9f; /* 设置字体颜色为灰色 */
  background-color: #ffffff;
}

.my-custom-button {
  background-color: #ffffff; /* 背景颜色: 白色 */
  color: rgb(63, 62, 62); /* 文字颜色：深灰 */
  font-size: 12px;
  width: 100px; /* 固定宽度 */
  height: 30px; /* 固定高度 */
  border: 2px solid #ffffff; /* 边框样式 */
  display: flex;
  justify-content: center; /* 水平居中子元素 */
  align-items: center; /* 垂直居中子元素 */
  border-radius: 5px; /* 圆角边框 */
}