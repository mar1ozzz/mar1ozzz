/* pages/index/index.wxss */
page {
    margin-top:20rpx;  
    width: 100%;
    height: 100%;
    padding-bottom: 90rpx;
    background-color: rgb(243, 242, 242);
    align-items: center;
    justify-content: center;
  }
.container{
    padding-top: 50rpx;
    background-color: white;
    width: 100%;    
    
   }
.title{   
    font-size: 50rpx;
    text-align: center;   
}
.score{
    font-size: 36rpx;
    text-align: center; 
    color: rgb(247, 223, 7); 
    margin-bottom: 50rpx;
}
.btn-block{
    display: flex;    
    
}
.confirm{
    width:150rpx;
    height: 80rpx;
    font-size: 36rpx;
}
.cancel{
    width:150rpx;
    height: 80rpx;
    font-size: 36rpx;
}
.tui-line-cell {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
  }

  .textarea-ui {
    width: 100%;
    font-size: 36rpx;
    font-family: STXihei;
    font-weight: 400;
    height: 100%;
  }
  
  .uni-textarea {
   
    width: 100%;    
    height: 300rpx;    
    
  }
  .img-body {
    width: 100%;
  }
  
  .img-header {
    display: flex;
    font-size: 26rpx;
    align-items: center;
    margin-bottom: 20rpx;
    justify-content: space-between;
    width: 100%;
  }
  
  .img-title {
    font-size: 28rpx;
    color: #000000;
  }
  
  .img-num {
    color: #999;
    font-size: 24rpx;
  }
  
.edit-img {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: space-between;
  }
  .edit-img  image {
    width: 200rpx;
    height: 200rpx;
    margin: 0 10rpx 10rpx 0;
  }
  .list-cell-score{
   
    width:100%
