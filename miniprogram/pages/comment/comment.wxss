@import '../../lib/iconfont/iconfont.wxss';

page {
  padding-bottom: 90rpx;
}

.container {
  padding: 20rpx 0 30rpx 0;
  background-color: #ffffff;
}

.tui-line-cell {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.tui-title {
  width: 120rpx;
  line-height: 32rpx;
  flex-shrink: 0;
}

.picker-value {
  flex: 1;
  padding: 12rpx 0;
  color: #333;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.user-list {
  max-height: 400rpx;
  overflow-y: auto;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.user-belong {
  color: #666;
  font-size: 24rpx;
}

.selected-user {
  color: #07c160;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.img-body {
  padding: 20rpx 30rpx;
}

.img-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.img-title {
  font-size: 28rpx;
  color: #333;
}

.img-num {
  font-size: 24rpx;
  color: #999;
}

.edit-img {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.edit-img image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 10rpx 10rpx 0;
}

.footer-btn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 60rpx auto;
  background: #07c160;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.uni-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.textarea-ui {
  width: 100%;
  min-height: 160rpx;
}

.icon-plus {
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(87,107,149,0.1);
  font-size: 40pt;
  color: #888;
  line-height: 200rpx;
  text-align: center;
}

.iconfont {
  color: #888;
}

.set-right-text{
  padding-top: 13px;
  padding-bottom:13px;
}

.phcolor{
  font-size: 26rpx;
}

.image-item {
  width: 210rpx !important;
  height: 210rpx !important;
}

.tui-input {
  font-size: 32rpx;
  color: #333;
  padding-left: 30rpx;
  flex: 1;
}

/* 底部操作区 */
.bottom-actions {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
}

.action-btn {
  padding: 16rpx 30rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
}

/* 弹出层样式 */
.popup-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-content {
  width: 80%;
  max-height: 80vh;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  position: relative;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}

.popup-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.search-box {
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.user-list {
  max-height: 400rpx;
  margin: 20rpx 0;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.user-item:last-child {
  border-bottom: none;
}

.user-belong {
  color: #666;
  font-size: 24rpx;
}

.selected-user {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin: 20rpx 0;
  color: #07c160;
  font-size: 28rpx;
}

.confirm-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-top: 30rpx;
}